<div class="container py-5">
  <h1 class="mb-4">Добавить репозиторий</h1>

  <% if flash[:alert].present? %>
    <div class="alert alert-danger"><%= flash[:alert] %></div>
  <% end %>

  <%= form_with model: @repository, url: repositories_path, local: true do |form| %>
    <% if @repository.errors.any? %>
      <div class="alert alert-danger">
        <ul class="mb-0">
          <% @repository.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="mb-3">
      <%= form.label :github_id, "Github *", class: "form-label" %>
      <%= form.select :github_id,
            options_for_select(@github_repositories.map { |repo| [repo.full_name, repo.id] }, @repository.github_id),
            { include_blank: true },
            class: "form-select" %>
    </div>

    <%= form.submit "Создать", class: "btn btn-primary" %>
  <% end %>
</div>
